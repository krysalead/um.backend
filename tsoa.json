{
  "swagger": {
    "outputDirectory": "../frontend/src/",
    "entryFile": "./src/hapi-server.ts",
    "host": "localhost:4000",
    "basePath": "/v1",
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "jwt_token",
        "in": "header",
        "scopes": {}
      }
    }
  },
  "routes": {
    "basePath": "/v1",
    "entryFile": "./src/hapi-server.ts",
    "routesDir": "./src",
    "middleware": "hapi",
    "middlewareTemplate": "custom-hpi-template.handlebars",
    "authenticationModule": "./src/core/hapiAuthentication.ts",
    "iocModule": "./src/ioc"
  },
  "ignore": [
    "**/node_modules/**"
  ]
}